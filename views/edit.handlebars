<h1>修改餐廳 -- {{restaurant.name}}</h1>
<div class="container">
  <form action="/restaurants/{{restaurant._id}}/edit" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">店名<span
          class="text-danger"
        >*</span></label>
      <input
        type="text"
        class="form-control"
        id="name"
        placeholder="Sababa 沙巴巴中東美食"
        name="name"
        value="{{restaurant.name}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="name_en" class="form-label">英文店名<span
          class="text-danger"
        >*</span></label>
      <input
        type="text"
        class="form-control"
        id="name_en"
        placeholder="Sababa Pita Bar"
        name="name_en"
        value="{{restaurant.name_en}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">分類<span
          class="text-danger"
        >*</span></label>
      <input
        type="text"
        class="form-control"
        id="category"
        placeholder="中東料理"
        list="categoryOptions"
        name="category"
        value="{{restaurant.category}}"
        required
      />
      <datalist id="categoryOptions">
        <option>美式</option>
        <option>咖啡</option>
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
      </datalist>
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">圖片連結<span
          class="text-danger"
        >*</span></label>
      <input
        type="url"
        class="form-control"
        id="image"
        name="image"
        value="{{restaurant.image}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">地址<span
          class="text-danger"
        >*</span></label>
      <input
        type="text"
        class="form-control"
        id="location"
        placeholder="台北市羅斯福路三段 283 巷 17 號"
        name="location"
        value="{{restaurant.location}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">電話<span
          class="text-danger"
        >*</span></label>
      <input
        type="tel"
        class="form-control"
        id="phone"
        placeholder="02 2363 8009"
        name="phone"
        value="{{restaurant.phone}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="google_map" class="form-label">Google地圖連結<span
          class="text-danger"
        >*</span></label>
      <input
        type="url"
        class="form-control"
        id="google_map"
        name="google_map"
        value="{{restaurant.google_map}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label">評分<span
          class="text-danger"
        >*</span></label>
      <input
        type="number"
        class="form-control"
        id="rating"
        min="0"
        max="5"
        step="0.1"
        name="rating"
        value="{{restaurant.rating}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">敘述<span
          class="text-danger"
        >*</span></label>
      <textarea
        class="form-control"
        id="description"
        rows="3"
        name="description"
        value="{{restaurant.description}}"
        required
      ></textarea>
    </div>
    <div class="text-center to-delete">
      <button type="submit" class="btn btn-primary">
        修改餐廳
      </button>
      <a href="/">
        <button type="button" class="btn btn-outline-secondary">
          返回首頁
        </button>
      </a>
      <button type="reset" class="btn btn-outline-danger">重新輸入</button>
    </div>
  </form>
</div>